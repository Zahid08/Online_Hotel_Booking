@model IEnumerable<HotelEntity.Class.Customers>

@{
    ViewBag.Title = "RegisterCustomer";
    Layout = "~/Views/Shared/_UserPanelLayout.cshtml";
}


    @if (Session["UserID"] != null)
    {

        <div class="panel panel-primary" style="margin-top:80px;">
            <div class="panel-heading">Registerd Customer</div>

            <div>
<br />
                <h4 class="success">@ViewBag.message</h4>
                <table class="table table-bordered table-hover table-striped">
                    <tr>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            PhoneNo
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer_Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer_PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.ActionLink("BookingNow", "CustomerBookingRoomsDetails", new { id = item.CustomerId }) |
                                @Html.ActionLink("BookingDetails", "CustomerBookingRoom", new { id = item.CustomerId }) |
                            </td>
                        </tr>
                    }

                </table>
            </div>
            </div>
            
            }

