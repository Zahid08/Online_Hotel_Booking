@model HotelEntity.Class.Rooms

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AminPanelLayout.cshtml";
}

<div class="panel panel-primary" style="margin-top:70px;">
    <div class="panel-heading">Remove Room</div>

    <h3 style="color:red;margin-left:80px;">Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               RoomNumber :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RoomNumber)
            </dd>
            <hr />
            <dt>
              Description :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <hr />

            <dt>
                Amount:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <hr />
            <dt>
                Capacity:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>

            <hr />
            <dt>
                Status:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>

            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>

            <dd>
                <img src="@Model.ImagePath" height="50" width="50" />
  
             </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color col-sm-offset-3">
                <input type="submit" value="Delete" class="btn btn-primary btn-sm btn-block login-button" />
              
            </div>
        }
    </div>

</div>