<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin | Homepage</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Scripts/UserPanel/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/Scripts/UserPanel/css/metisMenu.min.css" rel="stylesheet" />

    <!-- Timeline CSS -->
    <link href="~/Scripts/UserPanel/css/timeline.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Scripts/UserPanel/css/startmin.css" rel="stylesheet" />

    <!-- Morris Charts CSS -->

    <link href="~/Scripts/UserPanel/css/morris.css" rel="stylesheet" />

    <!-- Custom Fonts -->

    <link href="~/Scripts/UserPanel/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!-- Top Navigation: Left Menu -->
            <ul class="nav navbar-nav navbar-left navbar-top-links">


                <li>
                    @Html.ActionLink("  MyPage", "AdminPage", "Admin", null, new { @class = "glyphicon glyphicon-home" })
                </li>
            </ul>
            <!-- Top Navigation: Right Menu -->
            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown navbar-inverse">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        @if (Session["UserID"] != null)
                        {
                            int x = Convert.ToInt32(@Session["status"]);
                            if (x == 0)
                            {
                                <i style="color:red;" class="fa fa-bell fa-fw"></i> <b class="caret"></b>
                            }
                            else
                            {
                                <i class="fa fa-bell fa-fw"></i> <b class="caret"></b>
                            }
                        }


                    </a>


                    <ul class="dropdown-menu dropdown-alerts">
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-comment fa-fw"></i> New Comment
                                    <span class="pull-right text-muted small">4 minutes ago</span>
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                        <li>@Html.ActionLink("See All Status", "MailInformation", "Admin")</li>        
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>
                        @if (Session["UserID"] != null)
                        {
                            @Session["Firstname"].ToString() }<b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                        <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                </li>
            </ul>
            </li>
            </ul>
            <!-- Sidebar -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                          
                        </li>
                        <li>
                            <a href="#" class="active"><i class="fa fa-dashboard fa-fw"></i> Home</a>
                        </li>
                        <li style="margin-top:10px;">
                            <a href="#"><i class="fa fa-bars "></i>   RoomInformation<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>

                                <li>
                                    @Html.ActionLink(" Add_Rooms", "AddRoom", "Room", null, new { @class = "glyphicon glyphicon-plus" })

                                </li>
                                <li>
                                    @Html.ActionLink(" Manage_Rooms", "ManageRoom", "Room", null, new { @class = "glyphicon glyphicon-list" })

                                </li>

                        </li>
                        <li>
                        <li>@Html.ActionLink(" Available_Rooms", "AvailableRoom", "Room", null, new { @class = "glyphicon glyphicon glyphicon-ok" })</li>

                        </li>


                    </ul>
                    </li>

                    <li style="margin-top:10px;">
                    <li>@Html.ActionLink(" Billing_Information", "BillGenerate", "Admin" ,null, new { @class = "glyphicon glyphicon glyphicon-list" })</li>

                    <ul class="nav nav-second-level"></ul>
                    </li>

                    <li style="margin-top:10px;">
                    <li>@Html.ActionLink(" User_Information", "UserDetails", "User", null, new { @class = "glyphicon glyphicon glyphicon-list" })</li>

                    <ul class="nav nav-second-level"></ul>
                    </li>

                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">


                        @RenderBody()


                    </div>
                </div>
                <!-- ... Your content goes here ... -->
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Scripts/UserPanel/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/UserPanel/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Scripts/UserPanel/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/UserPanel/js/startmin.js"></script>

</body>
</html>
